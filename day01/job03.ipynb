    "def drawtriangle(n):\n",
    "    for i in range(0, n):\n",
    "        print(' '*(n-i+1) + '/' + ' '*(i*2) + '\\\\')\n",
    "\n",
    "        if (i == n-1):\n",
    "            print(' '*(n-i) + '/' + '_'*(i*2+2) + '\\\\')"
   ]
  },
